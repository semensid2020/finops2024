<div id="form-errors"></div>

<%= form_with model: currency do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label" style="width: 75px">
      <%= f.label :name%>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', style: "width: 300px"%>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label" style="width: 75px">
      <%= f.label :code%>
    </div>

    <div class="col-sm-10">
      <%= f.text_field :code, class: 'form-control', style: "width: 300px"%>
    </div>
  </div>

  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
